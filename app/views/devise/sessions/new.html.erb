<section class="ftco-section contact-section">
  <div class="container">
    <div class="row block-9">
      <div class="col-md-3"></div>

      <div class="col-md-6 d-flex">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'bg-light p-5 contact-form'}) do |f| %>
          <div class="form-group">
            <h2>Sign in</h2>
          </div>  

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your email", :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Your password", :class => 'form-control' %>
          </div>
          <div class="form-group">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          </div>
          <div class="form-group">
            <div class="actions">
              <%= f.submit "Log in", :class => 'btn btn-primary py-3 px-5' %>
            </div>
          </div>

          <div class="form-group">
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      
      </div>

      <div class="col-md-3"></div>
    </div>
  </div>
</section>