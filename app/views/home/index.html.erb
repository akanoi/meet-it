<section class="ftco-section contact-section">
  <div class="row block-9">
    <div class="col-md-1 d-flex"></div>

    <div class="col-md-10 d-flex">
      <form action="#" class="p-5 contact-form">
        <div class="form-group">
          <select class="form-control">
            <option class="form-control" value="volvo">V</option>
            <option class="form-control" value="saab">S</option>
            <option class="form-control" value="mercedes">M</option>
            <option class="form-control" value="audi">A</option>
          </select>
        </div>

        <div class="form-group">
          <label>Type (Foods, Sport, Other)</label>
          <input type="text" class="form-control" placeholder="Your Name">
        </div>
        <div class="form-group">
          <label>Date</label>
          <input type="text" class="form-control" placeholder="Your Email">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Subject">
        </div>
        <div class="form-group">
          <textarea name="" id="" cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
        </div>
        <div class="form-group">
          <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
        </div>
      </form>
    
    </div>

    <div class="col-md-1 d-flex"></div>
  </div>
</div>
</section>