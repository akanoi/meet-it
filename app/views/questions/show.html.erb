

<%# if @user && current_user.id == @user.id%>

<%# end %>

<% if @questions_to_me || @questions_for_me %>
  <section class="ftco-section contact-section">
    <div class="container">
      <div class="row no-gutters slider-text align-items-end justify-content-start">
        <div class="col-md-9 ftco-animate pb-5">
          <h1 class="mb-3 bread"><%= current_user.name.capitalize %> Questions</h1>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row d-flex mb-5 contact-info">
        <div class="col-md-12 mb-4">
          <h2 class="h3">My Question:</h2>
        </div>
        <div class="w-100">
          <% @questions_to_me.each do |question| %>
            <div class="col-md-3">
              <p><strong>Question: </strong><%= question.question %></p>
            </div>
            <div class="col-md-3">
              <p><strong>Answer: </strong><%= question.answer %></p>
            </div>
            <div class="col-md-3">
              <p><strong>Date: </strong><%= question.created_at.strftime('%F - %H:%m') %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row d-flex mb-5 contact-info">
        <div class="col-md-12 mb-4">
          <h2 class="h3">Questions for me:</h2>
        </div>
        <div class="w-100">
          <% @questions_for_me.each do |question| %>
            <div class="col-md-3">
              <p><strong>Question: </strong><%= question.question %></p>
            </div>
            <div class="col-md-3">
              <p><strong>Answer: </strong><%= question.answer %></p>
            </div>
            <div class="col-md-3">
              <p><strong>Date: </strong><%= question.created_at.strftime('%F - %H:%m') %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
<% else %>
  <section class="ftco-section contact-section">
    <div class="container">
      <div class="row d-flex mb-5 contact-info">
        <div class="col-md-12 mb-4">
          <h2 class="h3">Your question not founded!</h2>
        </div>
      </div>
    </div>
  </section>
<% end %>

